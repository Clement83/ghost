}

void drawBitmapAngle(int8_t x, int8_t y, const uint8_t *bitmap,const float angle) {
   int w = pgm_read_byte(bitmap);
   int h = pgm_read_byte(bitmap + 1);
        int centerX = w/2;
        int centerY = h+5;
   bitmap = bitmap + 2; //add an offset to the pointer to start after the width and height
    int i, j, byteWidth = (w + 7) / 8;
    for (j = 0; j < h; j++) {
        for (i = 0; i < w; i++) {
            if (pgm_read_byte(bitmap + j * byteWidth + i / 8) & (B10000000 >> (i % 8))) {
              
              int desX =   (i - centerX) * cos(angle) - (j-centerY) * sin(angle);
              int desY = (i-centerX) * sin(angle) + (j-centerY) * cos(angle);
              gb.display.drawPixel(x + desX, y + desY);
            }
        }
    }
}
